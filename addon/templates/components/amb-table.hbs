<table class='amb-table-grid'>
  {{#if fixedColumns}}
    <colgroup>
      <col style={{amb-table-style width=fixedWidth}} />
    </colgroup>
  {{/if}}

  {{#if showHeaders}}
    <tr class='amb-table-header' style={{amb-table-style height=headerHeight}}>
      {{#if fixedColumns}}
        {{amb-table-section
            class='amb-table-section-nonscroll'
            cells=(amb-table-header-cells columns=fixedColumns height=headerHeight)
        }}
      {{/if}}
      {{#if scrollColumns}}
        {{amb-table-section
            class='amb-table-section-nonscroll'
            cells=(amb-table-header-cells columns=scrollColumns height=headerHeight)
        }}
      {{/if}}
    </tr>
  {{/if}}

  <tr class='amb-table-body'>
    {{#if fixedColumns}}
      {{amb-table-section
          class='amb-table-section-nonscroll'
          cells=(amb-table-body-cells rows=rows columns=fixedColumns)
      }}
    {{/if}}
    {{#if scrollColumns}}
      {{amb-table-section
          class='amb-table-section-scroll'
          cells=(amb-table-body-cells rows=rows columns=scrollColumns)
          contentLayoutChange='scrollBodyLayoutChange'
      }}
    {{/if}}
  </tr>
</table>
